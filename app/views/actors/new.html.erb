<h1>New Actor:</h1>
<%= form_for :actor, url: {action: :create} do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.label :birth_date %><br>
    <%= f.date_field :birth_date %>
  </p>
  <p>
    <%= f.label :birth_place %><br>
    <%= f.text_field :birth_place %>
  </p>
  <p>
    <%= f.label :image_url %><br>
    <%= f.url_field :image_url %>
  </p>
  <p>
    <%= link_to 'Regresar', :action => :index %>
    <%= f.submit 'Crear Actor' %>
  </p>
<% end %>
